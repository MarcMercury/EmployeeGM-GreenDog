{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm ci --legacy-peer-deps",
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=8192' npm run build",
  "crons": [
    {
      "path": "/api/cron/session-reset",
      "schedule": "0 11 * * *"
    },
    {
      "path": "/api/cron/metrics-recalc",
      "schedule": "0 6 * * 1"
    },
    {
      "path": "/api/cron/cleanup-stale",
      "schedule": "0 4 * * 0"
    },
    {
      "path": "/api/cron/credential-expiry-check",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/agent-dispatcher",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/agent-budget-reset",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/agent-notifications",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/slack-sync",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/ezyvet-sync",
      "schedule": "0 */4 * * *"
    }
  ]
}
